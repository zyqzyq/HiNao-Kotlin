<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <ListPreference
            android:defaultValue="3"
            android:entries="@array/voicer_cloud_entries"
            android:entryValues="@array/voicer_cloud_values"
            android:key="voicer_preference"
            android:title="发音人" />
    <EditTextPreference
            android:dialogTitle="请输入语速:在线(0-100)"
            android:key="speed_preference"
            android:defaultValue="50"
            android:title="语速" />
    <EditTextPreference
            android:dialogTitle="请输入音调(0-100)"
            android:key="pitch_preference"
            android:defaultValue="50"
            android:title="音调" />
    <EditTextPreference
            android:dialogTitle="请输入音量(0-100)"
            android:key="volume_preference"
            android:defaultValue="50"
            android:title="音量" />
    <SwitchPreference
            android:title="本地播放"
            android:checked="true"
            android:key="chat_switch_preference"
            android:defaultValue="true"/>

</PreferenceScreen>